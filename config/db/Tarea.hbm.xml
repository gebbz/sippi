<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class dynamic-insert="false" dynamic-update="false" mutable="true" name="modelo.Tarea" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
    <id column="IDTAREA" name="id" type="integer">
      <generator class="increment"/>
    </id>

    <property column="UBICACION" name="ubicacion" type="string"/>
    <property column="DESCRIPCION" name="descripcion" type="string"/>
    <property column="OBSERVACIONES" name="observaciones" type="string"/>
    <many-to-one column="IDCRITICIDAD" name="criticidad"/>
    <property column="FECHAINICIO" name="fechaInicio" type="date"/>
    <property column="FECHAFIN" name="FechaFin" type="date"/>
    

    <list cascade="all" name="detallesMaterial" table="TAREA_X_DM">
      <key column="ID_TAREA_X_DM"/>
      <index column="idx"/>
      <many-to-many class="modelo.DetalleMaterial" column="ID_DM"/>
    </list>

    <!--many-to-one column="ID_GT" class="modelo.GrupoDeTrabajo"  name="grupo"/-->
    <list cascade="all" name="listaInstRolXTarea" table="TAREA_X_IRT">
      <key column="ID_TAREA_X_IRT"/>
      <index column="idx"/>
      <many-to-many class="modelo.InstanciaDeRolPorTarea" column="ID_IRT"/>
    </list>
    <!--list cascade="all" name="grupos" table="TAREA_X_G">
      <key column="ID_TAREA_X_G"/>
      <index column="idx"/>
      <many-to-many class="modelo.GrupoDeTrabajo" column="ID_GT"/>
    </list-->
    <list cascade="all" name="herramientas" table="TAREA_X_HDE">
      <key column="ID_TAREA_X_HDE"/>
      <index column="idx"/>
      <many-to-many class="modelo.HerramientaDeEmpresa" column="ID_HdE"/>
    </list>


  </class>
</hibernate-mapping>