<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class dynamic-insert="false" dynamic-update="false" mutable="true" name="modelo.PresupuestoBase" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
    <id column="IDPRESBASE" name="id" type="integer">
      <generator class="increment"/>
    </id>
    <property column="FECHAESTINCIOOBRA" name="fechaEstimadaInicioObra" type="date"/>
    <property column="FECHAESTFINOBRA" name="fechaEstimadaFinObra" type="date"/>
    <property column="version" name="version" type="string"/>
    <list cascade="all" name="etapas" table="PRESUPUESTOBASE_X_ETAPA">
      <key column="ID_PRESUPUESTO_BASE"/>
      <index column="idx"/>
      <one-to-many class="modelo.Etapa"/>
    </list>
    <property column="PORCCONSUMIBLES" name="porcConsumibles" type="float"/>
    <property column="IVA" name="IVA" type="float"/>
    <joined-subclass name="modelo.PlantillaPresupuesto" table="PLANTILLAPRESUPUESTO">
      <key column="IDPLANIFICACION"/>
      <property column="NOMBRE" name="nombre" type="string"/>
      <property column="DESCRIPCION" name="descripcion" type="string"/>
    </joined-subclass>
    <joined-subclass name="modelo.Presupuesto" table="PRESUPUESTO">
      <key column="IDPRESUPUESTO"/>
      <list cascade="all" name="planificaciones" table="PRESUPUESTO_X_PLANIFICACION">
        <key column="ID_PRESUPUESTO"/>
        <index column="idx"/>
        <one-to-many class="modelo.Planificacion"/>
      </list>
    </joined-subclass>
    <joined-subclass name="modelo.Planificacion" table="PLANIFICACION">
      <key column="IDPLANIFICACION"/>
      <many-to-one column="ID_EJECUCION" name="ejecucion"/>
    </joined-subclass>
    <joined-subclass name="modelo.EjecucionObra" table="EJECUCIONOBRA">
      <key column="IDEJECUCIONOBRA"/>
      <property column="FECHAINCIOREAL" name="fechaInicioReal" type="date"/>
      <property column="FECHAFINREAL" name="fechaFinReal" type="date"/>
      <property column="COMENTARIOS" name="comentarios" type="string"/>
      <list cascade="all" name="ejecEtapas" table="EJECUCIONOBRA_X_EJECUCIONETAPA">
        <key column="ID_EJECUCION_OBRA"/>
        <index column="idx"/>
        <one-to-many class="modelo.EjecucionEtapa"/>
      </list>
    </joined-subclass>
  </class>
</hibernate-mapping>
