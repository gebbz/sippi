<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class dynamic-insert="false" dynamic-update="false" mutable="true" optimistic-lock="version" polymorphism="implicit" select-before-update="false" name="modelo.OrdenDeCompra">
    
    <id column="ID_ORDEN_COMPRA" name="id" type="integer" unsaved-value="0">
      <generator class="increment"/>
    </id>
    
    <property name="fechaDeGeneracion" type="date"/>
    <property name="fechaUltimaModificacion" type="date"/>
    
    <many-to-one class="modelo.Proveedor" column="FK_PROVEEDOR" name="proveedor"/>
    
    <many-to-one class="modelo.FormaDePago" column="FK_FORMA_PAGO" name="formaDePago"/>
    
    <property name="estado" type="string"/>
    
    <property name="formaDeEntrega" type="string"/>
    
    <list cascade="all-delete-orphan" name="detalle" table="ORDENCOMPRA_X_DETALLEORDENCOMPRA">
      <key column="ID_DETALLEOC"/>
      <index column="ID"/>
      <one-to-many class="modelo.DetalleOrdenDeCompra"/>
    </list>
    
    <many-to-one class="modelo.RecepcionOrdenDeCompra" column="FK_RECEPCION" name="recepcion"/>
    
  </class>
</hibernate-mapping>
