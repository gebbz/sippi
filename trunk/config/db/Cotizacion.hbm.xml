<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class dynamic-insert="false" dynamic-update="false" mutable="true" name="modelo.Cotizacion" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
    <id column="IDCOTIZACION" name="id" type="integer">
      <generator class="increment"/>
    </id>
    <property column="VENCIMIENTO" name="vencimiento" type="date"/>
    <property column="TIEMPODEENTREGA" name="tiempoDeEntrega" type="date"/>
    <property column="FECHAEMISION" name="fechaEmision" type="date"/>
    <many-to-one column="IDPROVEEDOR" name="proveedor"/>
    <property column="CANTDIASVIGENCIA" name="cantDiasVigencia" type="integer"/>
    <property column="COSTOTOTAL" name="costoTotal" type="float"/>
    <property column="PROCENTAJEIVA" name="porcentajeIVA" type="float"/>
    <list cascade="all" name="detalle" table="COTIZACION_X_DETALLEMATERIAL">
      <key column="ID_COTIZACION"/>
      <index column="idx"/>
      <one-to-many class="modelo.DetalleMaterial"/>
    </list>
  </class>
</hibernate-mapping>
