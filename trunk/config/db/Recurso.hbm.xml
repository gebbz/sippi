<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="modelo.Recurso" table="RECURSOS">

    <id column="ID_REC" name="id" type="integer" unsaved-value="0">
      <generator class="increment"/>
    </id>

    <property column="NOMBRE" name="nombre" type="string"/>
    <property column="DESCRIPCION" name="descipcion" type="string"/>
    
    <many-to-one column="ID_RECURSO" name="recursos"/>

    <joined-subclass name="modelo.Material" table="Materiales">
      <key column="ID_MATERIAL"/>
    </joined-subclass>
    <joined-subclass name="modelo.Herramienta" table="Herramientas">
      <key column="ID_HERRAMIENTA"/>
      <property column="ESTADO" name="hib_flag_estado" type="string"/>
    </joined-subclass>
    <joined-subclass name="modelo.Consumible" table="Consumibles">
      <key column="ID_CONSUMIBLE"/>
    </joined-subclass>
    <joined-subclass name="modelo.Transporte" table="Transportes">
      <key column="ID_TRANSPORTE"/>
    </joined-subclass>
    <joined-subclass name="modelo.Viatico" table="Viaticos">
      <key column="ID_VIATICO"/>
    </joined-subclass>
    <joined-subclass name="modelo.Alojamiento" table="Alojamientos">
      <key column="ID_ALOJAMIENTO"/>
    </joined-subclass>
    <joined-subclass name="modelo.Indumentaria" table="Indumentarias">
      <key column="ID_INDUMENTARIA"/>
      <many-to-one column="ID_TALLE" name="talle"/>
      <property column="ESTADO" name="hib_flag_estado" type="string"/>
    </joined-subclass>
  </class>
</hibernate-mapping>
